<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--  设置按钮填充的颜色  -->
    <gradient
            android:angle="270"
            android:endColor="#FFFF00"
            android:startColor="#FF3030" />
    <!--  设置边角的弧度 -->
    <corners android:radius="20dip" />
    <!--  设置文字和边界的间距 -->
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />
</shape>